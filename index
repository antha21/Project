<!-- =======================================================
     JAVASCRIPT
=========================================================== -->
<script>
let LEVEL_PASSWORDS = {
    1:"A7B4C9",
    2:"MERRY22",
    3:"SANTA33",
    4:"FINAL2025"
};

let levels = JSON.parse(localStorage.getItem("progress")) || {
    level1:{completed:{}},
    level2:{completed:{}},
    level3:{completed:{}},
    level4:{completed:{}},
    unlockedLevels:{1:true,2:false,3:false,4:false,final:false}
};

function save(){ localStorage.setItem("progress", JSON.stringify(levels)); }

function resetProgress(){
    if(confirm("Reset ALL progress?")){
        localStorage.removeItem("progress");
        location.reload();
    }
}

function showScreen(id){
    document.querySelectorAll(".screen").forEach(s => s.classList.remove("active"));
    document.getElementById(id).classList.add("active");

    if(id === "matching") buildMemory();
}

function enterPassword(level){
    let input = document.getElementById(`pw-level${level}`).value.trim();
    if(input === LEVEL_PASSWORDS[level]){
        alert("Level unlocked!");

        let next = level + 1;
        if(next <= 4){
            levels.unlockedLevels[next] = true;
            unlockNav(next);
        } else {
            levels.unlockedLevels.final = true;
            unlockNav("final");
        }

        save();
        updateUI();
    } else {
        alert("Incorrect password.");
    }
}

function unlockNav(n){
    let id = typeof n === "number" ? `nav-level${n}` : "nav-final";
    let el = document.getElementById(id);

    el.classList.remove("locked");
    el.classList.add("unlocked");
    el.textContent = el.textContent.replace("üîí","");
    el.onclick = () => showScreen(id.replace("nav-",""));
}

function updateUI(){
    for(let L=2; L<=4; L++){
        if(levels.unlockedLevels[L]) unlockNav(L);
    }
    if(levels.unlockedLevels.final) unlockNav("final");

    for(let L in levels){
        if(L.startsWith("level")){
            for(const G in levels[L].completed){
                let el = document.getElementById(`${L}-${G}`);
                if(el) el.textContent = "‚úî";
            }
        }
    }
}
updateUI();

let symbols=["üéÑ","üéÑ","‚≠ê","‚≠ê","üéÅ","üéÅ","‚õÑ","‚õÑ"];
let first=null,lock=false,found=0;

function buildMemory(){
    const board=document.getElementById("game-board");
    board.innerHTML="";
    first=null; lock=false; found=0;
    document.getElementById("matching-code").style.display="none";

    let s=[...symbols];
    for(let i=s.length-1;i>0;i--){
        let j=Math.floor(Math.random()*(i+1));
        [s[i],s[j]]=[s[j],s[i]];
    }

    s.forEach(sym=>{
        let c=document.createElement("div");
        c.className="card";
        c.dataset.symbol=sym;

        c.onclick=()=>{
            if(lock || c.innerText) return;

            c.innerText=sym;

            if(!first){
                first=c;
            } else {
                if(first.dataset.symbol===sym){
                    first=null;
                    found++;
                    if(found===4){
                        document.getElementById("matching-code").style.display="block";
                        levels.level1.completed["Matching"] = true;
                        save();
                        updateUI();
                    }
                } else {
                    lock=true;
                    setTimeout(()=>{
                        first.innerText="";
                        c.innerText="";
                        first=null;
                        lock=false;
                    },700);
                }
            }
        };
        board.appendChild(c);
    });
}
</script>

</body>
